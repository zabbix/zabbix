                     <params>var FIELDS = [
  'heatsinkTempSensorOpen',
  'heatsinkTempSensorShort',
  'unknownAlarm',
  'suresineHot'
];

var flags = parseInt(value.replace(/\x20/g, ''), 16),
  result = [];

for (var i = 0, f = 1 &lt;&lt; 31 &gt;&gt;&gt; 0, l = FIELDS.length; i &lt; l; i++, f &gt;&gt;&gt;= 1) {

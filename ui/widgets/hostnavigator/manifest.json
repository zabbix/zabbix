{
	"manifest_version": 2.0,
	"id": "hostnavigator",
	"type": "widget",
	"name": "Host navigator",
	"namespace": "HostNavigator",
	"version": "1.0",
	"author": "Zabbix",
	"description": "Displays host hierarchy with ability to control other widgets based on selected host.",
	"url": "https://www.zabbix.com/documentation/7.0/en/manual/web_interface/frontend_sections/dashboards/widgets/host_navigator",
	"widget": {
		"size": {
			"width": 4,
			"height": 5
		},
		"js_class": "CWidgetHostNavigator",
		"in": {
			"groupids": {
				"type": "_hostgroupid"
			}
		},
		"out": [
			{
				"type": "_hostid"
			}
		]
	},
	"actions": {
		"widget.hostnavigator.view": {
			"class": "WidgetView"
		}
	},
	"assets": {
		"js": ["class.widget.js"]
	}
}
